[resource]
script = ExtResource( 1 )
type = "PATH"
asset_name = "PRETENDER"
data = "[

  {
    \"skill\" : {
      \"check\":\"true\",
      \"skill_text\":\"When you establish a false identity, roll +shadow. On a [b]strong hit[/b], you may add +2 when you make moves using this identity to deceive or influence others. If you roll a 1 on your action die when using your false identity, someone doubts you. Make appropriate moves to reassure them or prevent them from revealing the truth. On a [b]weak hit[/b], as above, but add +1 (instead of +2).\"
    }
  },
  
  {
    \"skill\" : {
      \"check\":\"false\",
      \"skill_text\":\"As above, and you may roll +shadow (instead of +heart) when you [i]Sojourn[/i] under your false identity. If you do, take +1 momentum on a hit.\"
    }
  },
  
  {
    \"skill\" : {
      \"check\":\"false\",
      \"skill_text\":\"When you [i]Secure an Advantage[/i] by revealing your true identity in a dramatic moment, reroll any dice.\"
    }
  }
  
]"
