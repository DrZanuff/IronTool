[resource]
script = ExtResource( 1 )
type = "COMBAT TALENT"
asset_name = "SHIELD-BEARER"
data = "[
  {
    \"text\" : \"If you wield a shield...\"  
  },
  
  {
    \"skill\" : {
      \"check\":\"true\",
      \"skill_text\":\"When you [i]Face Danger[/i] using your shield as cover, add +1. When you [i]Clash[/i] in close quarters, take +1 momentum on a strong hit.\"
    }
  },
  
  {
    \"skill\" : {
      \"check\":\"false\",
      \"skill_text\":\"When you paint your shield with a meaningful symbol, envision what you create. Then, if you [i]Endure Stress[/i] as you face off against a fearsome foe, add +1 and take +1 momentum on a hit.\"
    }
  },
  
  {
    \"skill\" : {
      \"check\":\"false\",
      \"skill_text\":\"When forced to [i]Endure Harm[/i] in a fight, you may instead sacrifice your shield and ignore all harm. If you do, the shield is destroyed. Once per fight, you also take initiative when you sacrifice your shield to avoid harm.\"
    }
  }
  
]"
