asset_name = "KEEN"
data = "[
  
  {
    \"skill\" : {
      \"check\":\"true\",
      \"skill_text\":\"When you hold a weapon and sing a keen for those it has killed, roll +heart. On a [b]strong hit[/b], the wielder inflicts +1 harm when they [i]Strike[/i] or [i]Clash[/i]. If they roll a 1 on their action die when making a move to inflict harm, the magic is spent. On a [b]weak hit[/b], as above, but the voices of those who were slain join in your song; [i]Endure Stress[/i] (2 stress).\"
    }
  },
  
  {
    \"skill\" : {
      \"check\":\"false\",
      \"skill_text\":\"As above, and the wielder may also (one time only) add +1 and take +2 momentum on a hit when they [i]Draw the Circle[/i], [i]Enter the Fray[/i], or [i]Battle[/i].\"
    }
  },
  
  {
    \"skill\" : {
      \"check\":\"false\",
      \"skill_text\":\"When you perform this ritual, add +1 and take +1 momentum on a hit.\"
    }
  }
  
]"
