asset_name = "TOTEM"
data = "[
  
  {
    \"skill\" : {
      \"check\":\"true\",
      \"skill_text\":\"When you hold a totem of your animal or beast companion and focus on it, roll +heart. On a [b]strong hit[/b], you are bound together. Add +1 and take +1 momentum on a hit when you use a companion ability. If you roll a 1 on your action die when using a companion ability, the magic is spent. On a [b]weak hit[/b], as above, but creating this connection is unsettling; [i]Endure Stress[/b] (1 stress).\"
    }
  },
  
  {
    \"skill\" : {
      \"check\":\"false\",
      \"skill_text\":\"As above, and you may also perceive the world through your companion's senses while you make moves aided by them (even when you are apart).\"
    }
  },
  
  {
    \"skill\" : {
      \"check\":\"false\",
      \"skill_text\":\"When you perform this ritual, add +1 and take +1 momentum on a hit.\"
    }
  }
  
]"
