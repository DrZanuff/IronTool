script = ExtResource( 1 )
type = "RITUAL"
asset_name = "SHADOW-WALK"
data = "[
  
  {
    \"skill\" : {
      \"check\":\"true\",
      \"skill_text\":\"When you cloak yourself with the gossamer veil of the shadow realms, roll +shadow. On a [b]strong hit[/b], take +1 momentum. Then, reroll any dice (one time only) when you make a move by ambushing, hiding, or sneaking. On a [b]weak hit[/b], as above, but the shadows try to lead you astray. You must first [i]Face Danger[/i] to find your way.\"
    }
  },
  
  {
    \"skill\" : {
      \"check\":\"false\",
      \"skill_text\":\"As above, and you may also travel along the hidden paths of the shadow realms to [i]Undertake a Journey[/i] using +shadow (instead of +wits). If you do, [i]Endure Stress[/i] (1 stress) and mark progress twice on a [b]strong hit[/b].\"
    }
  },
  
  {
    \"skill\" : {
      \"check\":\"false\",
      \"skill_text\":\"When you perform this ritual, add +1 and take +1 momentum on a hit.\"
    }
  }
  
]"
