[resource]
script = ExtResource( 1 )
type = "PATH"
asset_name = "MASKED"
data = "[

  {
    \"text\" : \"Once you mark a bond with elves, and are gifted a mask of precious elderwood...\"
  },

  {
    \"skill\" : {
      \"check\":\"true\",
      \"skill_text\":\"Choose your mask's material. When you wear the mask and make a move which uses its stat, add +1. If you roll a 1 on your action die, suffer -1 to the associated track (in addition to any other outcome of the move).\"
    }
  },

  {
    \"item\" : \"Thunderwood: Edge / Health\"
  },
  {
    \"item\" : \"Bloodwood: Iron / Health\"
  },
  {
    \"item\" : \"Ghostwood: Shadow / Spirit\"
  },
  {
    \"item\" : \"Whisperwood: Wits / Spirit\"
  },
  
  {
    \"skill\" : {
      \"check\":\"false\",
      \"skill_text\":\"As above, and you may instead add +2 and suffer -2 (decide before rolling).\"
    }
  },
  
  {
    \"skill\" : {
      \"check\":\"false\",
      \"skill_text\":\"When you [i]Face Death[/i] or [i]Face Desolation[/i] while wearing the mask, you may roll +wits stat (instead of +heart).\"
    }
  }
  
]"
