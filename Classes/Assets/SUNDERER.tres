script = ExtResource( 1 )
type = "COMBAT TALENT"
asset_name = "SUNDERER"
data = "[
  {
    \"text\" : \"If you wield an axe...\"  
  },
  
  {
    \"skill\" : {
      \"check\":\"true\",
      \"skill_text\":\"When you [i]Strike[/i] or [i]Clash[/i] in close quarters, you may suffer -1 momentum and inflict +1 harm on a hit (decide before rolling).\"
    }
  },
  
  {
    \"skill\" : {
      \"check\":\"false\",
      \"skill_text\":\"When you have your axe in hand, and use the promise of violence to [i]Compel[/i] or [i]Secure an Advantage[/i], add +1 and take +1 momentum on a hit.\"
    }
  },
  
  {
    \"skill\" : {
      \"check\":\"false\",
      \"skill_text\":\"When you make a tribute to a fallen foe (formidable or greater) by carving a rune in the haft of your axe, roll +heart. On a [b]strong hit[/b], inflict +1d6 harm (one time only) when you [i]Strike[/i] or [i]Clash[/i]. On a [b]weak hit[/b], as above, but this death weighs on you; [i]Endure Stress[/i] (2 stress).\"
    }
  }
  
]"
